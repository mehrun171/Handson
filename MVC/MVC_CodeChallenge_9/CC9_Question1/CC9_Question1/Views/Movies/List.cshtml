@model IEnumerable<CC9_Question1.Models.Movie>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Add New Movie", "Create")
</p>

<table class="table">
    <tr>
        <th>Movie Name</th>
        <th>Director</th>
        <th>Date of Release</th>
        <th>Actions</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Moviename</td>
            <td>@movie.DirectorName</td>
            <td>@movie.DateofRelease.ToShortDateString()</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = movie.Mid }) |
                @Html.ActionLink("Delete", "Delete", new { id = movie.Mid })
            </td>
        </tr>
    }
</table>